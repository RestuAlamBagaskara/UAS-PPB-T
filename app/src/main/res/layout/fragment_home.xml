<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment">

        <ImageView
            android:id="@+id/promo"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/predator">
        </ImageView>

        <TextView
            android:id="@+id/txtKategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kategori"
            android:layout_marginTop="15sp"
            android:layout_below="@id/promo"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_centerHorizontal="true">
        </TextView>

        <ImageButton
            android:id="@+id/makanan"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_below="@+id/txtKategori"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/food"
            android:src="@drawable/food">
        </ImageButton>
        <ImageButton
            android:id="@+id/rumah"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_marginTop="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/home"
            android:layout_below="@+id/txtKategori">
        </ImageButton>
        <ImageButton
            android:id="@+id/ibu_anak"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/baby"
            android:layout_below="@+id/makanan">
        </ImageButton>
        <ImageButton
            android:id="@+id/kesehatan"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_marginTop="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/helt"
            android:backgroundTint="@color/white"
            android:layout_below="@+id/rumah">
        </ImageButton>
    </RelativeLayout>
</ScrollView>